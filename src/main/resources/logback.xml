<configuration>

	<logger name="org.aksw.commons.sparql.api" level="TRACE" />

  <appender name="CONSOLE"
    class="ch.qos.logback.core.ConsoleAppender">
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level>INFO</level>
    </filter>
    <encoder>
      <pattern>
        %date{HH:mm:ss.SSS} [%thread] %-5level %logger{30} - %msg%n
      </pattern>
    </encoder>
  </appender>
  <root level="TRACE">
    <appender-ref ref="CONSOLE" />
  </root>
</configuration>
